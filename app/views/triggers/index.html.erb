<h1>Listing triggers</h1>

<table>
  <tr>
    <th>Shared</th>
    <th>Organization</th>
    <th>Program</th>
    <th>Template goal</th>
    <th>Trigger for silence instead of reports</th>
    <th>Trigger for failure instead of success</th>
    <th>Trigger once days straight success or failure</th>
    <th>Trigger once lagging rate success or failure</th>
    <th>Trigger once total days of success or failure</th>
    <th>Trigger once min total days elapsed</th>
    <th>Min total days elapsed</th>
    <th>Min lag days</th>
    <th>Min success or failure days</th>
    <th>Min success or failure rate</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @triggers.each do |trigger| %>
  <tr>
    <td><%=h trigger.shared %></td>
    <td><%=h trigger.organization_id %></td>
    <td><%=h trigger.program_id %></td>
    <td><%=h trigger.template_goal_id %></td>
    <td><%=h trigger.trigger_for_silence_instead_of_reports %></td>
    <td><%=h trigger.trigger_for_failure_instead_of_success %></td>
    <td><%=h trigger.trigger_once_days_straight_success_or_failure %></td>
    <td><%=h trigger.trigger_once_lagging_rate_success_or_failure %></td>
    <td><%=h trigger.trigger_once_total_days_of_success_or_failure %></td>
    <td><%=h trigger.trigger_once_min_total_days_elapsed %></td>
    <td><%=h trigger.min_total_days_elapsed %></td>
    <td><%=h trigger.min_lag_days %></td>
    <td><%=h trigger.min_success_or_failure_days %></td>
    <td><%=h trigger.min_success_or_failure_rate %></td>
    <td><%=h trigger.name %></td>
    <td><%=h trigger.description %></td>
    <td><%= link_to 'Show', trigger %></td>
    <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
    <td><%= link_to 'Destroy', trigger, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

