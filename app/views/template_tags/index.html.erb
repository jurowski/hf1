<h1>Listing template_tags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Template goal</th>
  </tr>

<% @template_tags.each do |template_tag| %>
  <tr>
    <td><%=h template_tag.tag_id %></td>
    <td><%=h template_tag.template_goal_id %></td>
    <td><%= link_to 'Show', template_tag %></td>
    <td><%= link_to 'Edit', edit_template_tag_path(template_tag) %></td>
    <td><%= link_to 'Destroy', template_tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New template_tag', new_template_tag_path %>