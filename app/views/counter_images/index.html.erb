<h1>Listing counter_images</h1>

<table>
  <tr>
    <th>Counter images set</th>
    <th>Count</th>
    <th>Image name</th>
  </tr>

<% @counter_images.each do |counter_image| %>
  <tr>
    <td><%=h counter_image.counter_images_set_id %></td>
    <td><%=h counter_image.count %></td>
    <td><%=h counter_image.image_name %></td>
    <td><%= link_to 'Show', counter_image %></td>
    <td><%= link_to 'Edit', edit_counter_image_path(counter_image) %></td>
    <td><%= link_to 'Destroy', counter_image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New counter_image', new_counter_image_path %>