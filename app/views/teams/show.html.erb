
<div class="alert alert-info">

  <% if @team.i_am_owner_or_admin(current_user.id) %>


    <b>Team Name:</b>
    <%= link_to @team.name, edit_team_path(@team) %>

    <br>
    <b>Team Goal:</b> 
    <% if @team.goal_template_parent %>
      <%=h @team.goal_template_parent.title %>   
    <% else %>
      Any goal in the category of <%=h @team.category_name %>
    <% end %>

    <br>
    <b>Current Size:</b>
    <%=h @team.qty_current %>/<%=h @team.qty_max %>



    <br>
    <% if @team.qty_current < 2 %>
      <%= link_to 'Delete (no other team members)', @team, :confirm => 'Are you sure?', :method => :delete %>
    <% else %>

      <a id='delete_disabled_<%= @team.id.to_s %>'  class="btn disabled" title="Sorry, you can't delete a team that has members." ><i class="icon-remove"></i> Delete</a>
      <script type='text/javascript'>
          $('#delete_disabled_<%= @team.id.to_s %>').tipsy();
      </script>

    <% end %>

  <% else %>

    <b>Team Name:</b>
    <%=h @team.name %>

    <br>
    <b>Team Goal:</b> 
    <% if @team.goal_template_parent %>
      <%=h @team.goal_template_parent.title %>   
    <% else %>
      Any goal in the category of <%=h @team.category_name %>
    <% end %>

    <br>
    <b>Members:</b>
    <%=h @team.qty_current %>/<%=h @team.qty_max %>


  <% end %>


</div>




<!-- START SHOW TEAM MEMBERS -->
<%
team_goals = Goal.find(:all, :conditions => "team_id = '#{@team.id}'")
%>
<i class="icon-external-link"></i> <a href="popupex.html" onclick="return popitup('/team_rules.html')">Team Rules</a>

<%
