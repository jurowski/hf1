<h1>Listing message_tags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Message</th>
  </tr>

<% @message_tags.each do |message_tag| %>
  <tr>
    <td><%=h message_tag.tag_id %></td>
    <td><%=h message_tag.message_id %></td>
    <td><%= link_to 'Show', message_tag %></td>
    <td><%= link_to 'Edit', edit_message_tag_path(message_tag) %></td>
    <td><%= link_to 'Destroy', message_tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message_tag', new_message_tag_path %>