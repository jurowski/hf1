
<%
from_user = User.find(@invite.from_user_id)
team = Team.find(@invite.purpose_join_team_id)
if from_user and team and team.name
    %>
        <!-- buttons -->
        <% if @invite.accepted_on %>
          <b>Accepted on:</b> <%=h @invite.accepted_on %>
        <% else %>
          <% if @invite.declined_silently_on %>
            <b>Ignored on:</b> <%=h @invite.declined_silently_on %>
            <%= link_to 'Accept Instead (Join Team)', '/invites/' + @invite.id.to_s + '?accept=1', :class => "btn" %>
          <% else %>
            <%= link_to 'Accept (Join Team)', '/invites/' + @invite.id.to_s + '?accept=1', :class => "btn" %>
            <%= link_to 'Ignore', '/invites/' + @invite.id.to_s + '?ignore=1', :class => "btn" %>
          <% end %>
        <% end %>
        <!-- end buttons -->

        <b><%=h from_user.name %></b> has invited you to join 
        <b><%= team.name %></b> to work on <b>
        <% if team.goal_template_parent_id 
            follow_goal = Goal.find(team.goal_template_parent_id)
            if follow_goal
                %>
                <%=h follow_goal.title %>
                <%
            else
                %>
                error finding goal
                <%
            end
            %>
        <% else %>

            <% if team.category_name %>
                any <%=h team.category_name %>-related goal
            <% else %>
                error finding category
            <% end %>

        <% end %>
         </b>

      <br />
    <%
end
%>




<br>
