
<h1>Listing affiliates</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Last name</th>
    <th>First name</th>
    <th>Affiliate name</th>
    <th>Coupon code</th>
    <th>Coupon discount</th>
    <th>Affiliate earnings rate</th>
  </tr>

<% @affiliates.each do |affiliate| %>
  <tr>
    <td><%=h affiliate.email %></td>
    <td><%=h affiliate.last_name %></td>
    <td><%=h affiliate.first_name %></td>
    <td><%=h affiliate.affiliate_name %></td>
    <td><%=h affiliate.coupon_code %></td>
    <td><%=h affiliate.coupon_discount %></td>
    <td><%=h affiliate.affiliate_earnings_rate %></td>

    <td><%= link_to 'Show', affiliate %></td>
    <td><%= link_to 'Edit', edit_affiliate_path(affiliate) %></td>
    <td><%= link_to 'Destroy', affiliate, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p>

<%= link_to 'New affiliate', new_affiliate_path %>
</p>