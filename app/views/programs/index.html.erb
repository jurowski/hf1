<h3>My Programs</h3>

<% @programs.each do |program| %>

	<br>
	<% if program.status and program.status == "live" %>
	  <mark>Published</mark> 
	<% else %>
	  (dev) 
	<% end %>
    <%= link_to program.name, program %>


	<% if program.count_of_enrolled_users %>
		<% if program.count_of_enrolled_users > 0 %>
			( 
			<%= program.count_of_enrolled_users %>
			)
		<% end %>
	<% else %>
		<% if program.program_enrollments.size > 0 %> 
			(
			<%= program.program_enrollments.size %>
			) 
		 <% end %>
	<% end %>



<% end %>

<br />

<a href="/programs/new" class="btn green">+ Create a Program</a>