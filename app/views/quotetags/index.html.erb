<h1>Listing quotetags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Quote</th>
  </tr>

<% @quotetags.each do |quotetags| %>
  <tr>
    <td><%=h quotetags.tag_id %></td>
    <td><%=h quotetags.quote_id %></td>
    <td><%= link_to 'Show', quotetags %></td>
    <td><%= link_to 'Edit', edit_quotetags_path(quotetags) %></td>
    <td><%= link_to 'Destroy', quotetags, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New quotetags', new_quotetags_path %>