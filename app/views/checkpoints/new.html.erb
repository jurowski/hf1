<h1>New checkpoint</h1>

<% form_for(@checkpoint) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :checkin_date %><br />
    <%= f.date_select :checkin_date %>
  </p>
  <p>
    <%= f.label :checkin_time %><br />
    <%= f.time_select :checkin_time %>
  </p>

  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= 
        @goals = Goal.find(:all, :order => "title").map {|u| [u.title + "   (" + u.user.first_name + ")", u.id] } 
        f.select(:goal_id, @goals) 
    %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', checkpoints_path %>