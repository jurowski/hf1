<!-- Time.now() -->
<div style="padding:5px;"> 
<!-- <div style="background-color:#F7F8E0;padding:5px;">  -->
	<p>
	<% 
	##### controls how many to show at once
	if session[:dynamic_latest_public_checkins_max] == nil
		session[:dynamic_latest_public_checkins_max] = 3
	end


	if params[:mod_qty]
		session[:dynamic_latest_public_checkins_max] += params[:mod_qty].to_i
	end
	%>

	<% max = session[:dynamic_latest_public_checkins_max] %>
	<% counter = 0 %>

	<!--Latest <= max - 1 > Successes...<br> -->

	<% encourage_items = EncourageItem.find(:all, :conditions => "checkpoint_date >= '#{current_user.dyesterday }' or encourage_type_new_goal_bool = '1'", :order => "id DESC", :limit => (max + 10)) %>
	<% encourage_items.each do |e| %>
		<% if counter <= max %>

			<% counter += 1 %>

			
			<div style="padding-top:5px;">
			<span style="font-size:.7em;"><%= time_ago_in_words(e.updated_at) %> ago...</span>
			<br>

			<% if e.encourage_type_new_goal_bool %>
				<image src="/images/icons/sprout_50px.png" title="Just Starting this Habit"/>
			<% else %>


				<% if e.goal_days_into_it and  e.goal_days_into_it > 30 %>

					<% if e.goal_success_rate_percentage and e.goal_success_rate_percentage > 74 %>

						<% found_category = false %>

						<% if !found_category and e.goal_category and e.goal_category == "Exercise" %>
							<% found_category = true %>
							<image src="/images/icons/sprout_grown_exercise_50px.png" title="Exercise Habit <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success during the past 30 days"/>	
						<% end %>

						<% if !found_category and e.goal_category and e.goal_category == "Diet, Healthy Foods and Water" %>
							<% found_category = true %>
							<image src="/images/icons/sprout_grown_food1_50px.png" title="Diet, Healthy Foods and Water Habit <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success during the past 30 days"/>	
						<% end %>

						<% if !found_category and e.goal_category and e.goal_category == "Relationships" %>
							<% found_category = true %>
							<image src="/images/icons/sprout_grown_relationships_50px.png" title="Relationships Habit <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success during the past 30 days"/>	
						<% end %>

						<% if !found_category %>
							<% found_category = true %>
							<image src="/images/icons/sprout_grown_50px.png" title="Habit <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success during the past 30 days"/>	
						<% end %>

					<% else %>
						<image src="/images/icons/sprout_growing_water_50px.png" title="Growing this Habit: <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success during the past 30 days" />
					<% end %> 

				<% else %>
					<image src="/images/icons/sprout_growing_water_50px.png" title="Growing this Habit: <%= e.goal_days_into_it %> Days in with <%= e.goal_success_rate_percentage %>% Success"/>
				<% end %>
				<script type='text/javascript'>
				$('#sprout_<%= e.goal_id.to_s %>').tipsy();
				</script>   				

			<% end %>

			<% if current_user.goal_ids_that_i_follow.include?(e.goal_id) %>
			    <a href="#" class="btn disabled"><i class="icon-rss"></i></a>
			<% else %>
		        <a href="/cheers?start_following_goal_id=<%= e.goal_id.to_s %>&email=<%= current_user.email %>" id='follow_<%= e.goal_id.to_s %>'  class="btn " style="font-size:1.5em;" title="Follow <%= e.user_name %>'s Progress" ><i class="icon-rss"></i></a>
		        <script type='text/javascript'>
		            $('#follow_<%= e.goal_id.to_s %>').tipsy();
		        </script>
			<% end %>


			<% if e.encourage_type_new_goal_bool %>

				<a href="/tomessages/new?gid=<%=e.goal_id.to_s%>&goal_id=<%=e.goal_id.to_s%>&from_type=member&tomessage_subject=<%= e.goal_name %>&to_id=<%= e.user_id %>" id='encourage_<%= e.goal_id.to_s %>' class="btn " style="font-size:1.5em;" title='Encourage <%= e.user_name %>!'> <i class="icon-thumbs-up"></i></a> <span style="font-weight:bold;font-size:1.2em;"> 


			<% else %>

				<a href="/tomessages/new?gid=<%=e.goal_id.to_s%>&goal_id=<%=e.goal_id.to_s%>&from_type=member&message_type=congrats&tomessage_subject=<%= e.goal_name %>&to_id=<%= e.user_id %>" id='encourage_<%= e.goal_id.to_s %>' class="btn " style="font-size:1.5em;" title='Congratulate <%= e.user_name %>!'> <i class="icon-thumbs-up"></i></a> <span style="font-weight:bold;font-size:1.2em;"> 

			<% end %>


			<!-- if member_goal.user.show_gravatar -->
			<% gravatar = "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(e.user_email.downcase)}?d=mm" %>
			<img src="<%= gravatar %>&s=34" style="padding-top:2px;" />            
			<!-- else -->
			<!--img src="/home/images/default_gravatar.png" height="20px"/-->
			<!-- end -->

			<% if e.encourage_type_new_goal_bool %>

				<%
				arr_subject = Array.new
				arr_subject.push(["is determined to start a new habit of"])
				arr_subject.push(["has decided to start"])
				arr_subject.push(["is going to be"])
				arr_subject.push(["will start"])
				arr_subject.push(["is committing to"])
				arr_subject.push(["is ready to start"])
				arr_subject.push(["will be forging a habit of"])
				arr_subject.push(["is embarking on a journey of"])

				random_number = 0
				random_number = rand(arr_subject.size) + 0 #between 0 and arr_subject.size
				random_subject = arr_subject[random_number]

				subject_value = random_subject.to_s
				%>

				<%= e.user_name %></span> <%= subject_value %> <span style="background-color:#FFFF99;">
			<% else %>

				<%
				arr_subject = Array.new
				arr_subject.push(["succeeded at"])
				arr_subject.push(["rocked it by"])
				arr_subject.push(["took action by"])
				arr_subject.push(["showed resolve by"])
				arr_subject.push(["deserves props for"])
				arr_subject.push(["gets a cograts for"])
				arr_subject.push(["stuck with it by"])
				arr_subject.push(["strengthened the habit of"])
				arr_subject.push(["fought inertia by"])
				arr_subject.push(["said 'I can do this, no problem' by"])


				random_number = 0
				random_number = rand(arr_subject.size) + 0 #between 0 and arr_subject.size
				random_subject = arr_subject[random_number]

				subject_value = random_subject.to_s
				%>


				<%= e.user_name %></span> <%= subject_value %> <span style="background-color:#FFFF99;">
			<% end %><a href="/goals/new?goal_template_text=<%= e.goal_name %>&category=<%= e.goal_category %>" id='start_<%= e.goal_id.to_s %>' title="Do this! Start <%= e.goal_name %>!"><%= e.goal_name %></a><script type='text/javascript'>$('#start_<%= e.goal_id.to_s %>').tipsy();</script></span> <% if e.encourage_type_new_checkpoint_bool %><% if current_user.dtoday >= e.checkpoint_date %> today! <% elsif current_user.dyesterday == e.checkpoint_date %> yesterday! <% else %> on <%= e.checkpoint_date %><% end %><% end %>
			<script type='text/javascript'>
			$('#encourage_<%= e.goal_id.to_s %>').tipsy();
			</script>       
			</div>



		<% else %>
			<% break %>
		<% end %> <!-- end if counter <= max -->


	<% end %> <!-- end for each encourgement item-->

	 &nbsp &nbsp &nbsp &nbsp
	 <a onclick="toggle_show('spinner_dynamic_latest_public_checkins');reload_show_latest_mod_qty('5');" class="glyphicons more"><i clas="icon-more"></i></a>


	 <!--
	 < if max > 3 >
	 	 
		 <a onclick="toggle_show('spinner_dynamic_latest_public_checkins');reload_show_latest_mod_qty('-3');">show less</a> 
	 < end >
	-->

	</p>
</div>
<br>

<!-- HIDE THE SPINNER NOW THAT THE PAGE IS DONE LOADING -->
<script>
toggle_hide('spinner_dynamic_latest_public_checkins');
</script>