
<div style="font-family:LatoBold;">
<%
#########################################################3
#########################################################3
####  START IF ACCEPTING A TEAM INVITATION
if @invite and @team
%>
  <div class="alert alert-info">
  Thanks for accepting <%= @invite_from_user.first_name %>'s invitation! 
  By becoming a member of the "<%= @team.name %>" team, you'll be joining as many as <% (@team.qty_max - 1).to_s %> others who are committed to achieving success with 
  <%
  if @invite_team_type_goal
  %>
   the goal of "<%= @goal.title %>".
  <%
  end

  if @invite_team_type_category
  %>
   their own custom goal in the category of "<%= @team.category_name %>".
  <%
  end
  %>
  </div>
<%
end
####  END IF ACCEPTING A TEAM INVITATION
#########################################################3
#########################################################3
%>




<% if (params[:template_owner_is_a_template] and params[:template_owner_is_a_template] == "1") %>
  <h3>...a new template for others to use</h3>
<% else %>

  <% if params[:welcome] %>
  <div style="padding-bottom:10px;">
  <span style="font-size:2em;">
  <% if current_user.first_name == "unknown"%>
  Welcome to HabitForge, a start of something new.
  <% else %>
  Welcome to HabitForge, <%= current_user.first_name %>. It's the the start of something new.
  <% end %>
  </span>
  </div>
  <span style="font-size:1.2em;">
  Let's jump right in!
  </span>


  <% else %>
  <h3>Let's jump right in!</h3>
  <% end %>
<% end %>


<% form_for(@goal) do |f| %>

    <div class="alert-error">
    <%= f.error_messages %>
    </div>


    <!-- NO FIRST NAME -->
    <% if current_user.first_name == "unknown"%>
      <% first_name_value = "" %>
      <% 
      if params[:first_name] 
        first_name_value = params[:first_name]
      end

      if session[:layout_number]
      logger.info("sgj:got a signup from home page layout #" + session[:layout_number].to_s)
      end  
      %>
            

      <% if !@goal.template_owner_is_a_template %>
<!--         <div style="float:left;">
          <span style="font:2em Arial sans-serif;">What's your first name?</span>
        </div>
 -->      
        <div style="padding-top:15px;">
        <span style="color:#ff3300;font-size:2em;font-weight:bold;">What's your name?</span>
        </div>

        <div style="float:left;">
          &nbsp <input type="textbox" name="first_name" value="<%= first_name_value %>" placeholder="Your first name...ex: Steven" size=25 style="width:200px;">
        </div>

      <% end %> 

      <div >
      &nbsp
      <br>
      &nbsp
      </div>
    <% end %>
    <!-- END NO FIRST NAME -->


    <%= render :partial => "form", :object => f %>


    <p>

    <% if @goal.template_owner_is_a_template %>
      <input type="submit" value="Launch This New Action Template" class="btn_red_gradient_forge" >
    <% else %>
      <input type="submit" value="Forge My Habit" class="btn_red_gradient_forge" style="line-height:10px;padding-top:10px;height:40px;">
    <% end %>
    <br>
    <a href="/goals" >or, Cancel</a>
    </p>

<% end %>

</div>